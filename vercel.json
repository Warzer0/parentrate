{
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**", ".env"]
      }
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/manifest.json", "destination": "/api" },
    { "source": "/configure/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/configure/(.*)", "destination": "/index.html" },
    { "source": "/configure", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/api" }
  ],
  "headers": [
    {
      "source": "/configure/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
